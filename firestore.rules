rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règle : Un utilisateur ne peut lire et écrire que ses propres données
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Autoriser l'accès aux sous-collections (ex: 'days' pour le journal)
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}